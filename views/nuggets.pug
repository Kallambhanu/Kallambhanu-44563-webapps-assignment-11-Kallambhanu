extends layout

block content
  div(class='container')
        h1(style="text-align: center; color: #863A6F")= title
        a(href='/nuggets/create')
          button.btn(class="btn btn-success", style="margin: 5px; width: 130px;", onclick= destination) Create
        - var results = results
        div(class='container' style="text-align: center;")  
            div.row 
                each item, index in results
                    div(class='col-md')
                        div(class='card', style='width: 17rem;')
                            div(class='card-body')
                                - let destination = `dispatch(\"/nuggets/update?id=${item._id}\")`
                                - let detailView = `dispatch(\"/nuggets/detail?id=${item._id}\")`
                                - let deleteview = `dispatch(\"/nuggets/delete?id=${item._id}\")`
                                div(class='card-text', onclick=`buy(${index})`) nuggets_type: #{item["nuggets_type"]}  <br>  size: #{item["size"]} <br> cost: #{item["cost"]} 
                                 button.btn(class="btn btn-warning", style="margin: 5px; width: 130px;", onclick= destination) Update  
                                 button.btn(class="btn btn-info btn-sm ml-1", style="margin: 5px; width: 130px;", onclick= detailView) Details  
                                 button.btn(class="btn btn-danger", style="margin: 5px; width: 130px;", onclick= deleteview) Delete 
